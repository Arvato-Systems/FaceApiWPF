<Window x:Class="FaceApiWFP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceApiWFP"
        mc:Ignorable="d"
        Title="Azure Age Analyser (FaceAPI)" Loaded="Window_Loaded" Width="750" Height="550" >

    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Button Content="Start/Stop Timer" Click="Btn_StartStop_Click"></Button>
            <Button Content="Take Picture" Click="Btn_TakePicture_Click"></Button>
            <Button Content="Zoom In" Click="Btn_ZoomIn_Click" />
            <Button Content="Zoom Out" Click="Btn_ZoomOut_Click" />
            <Button Content="320/640/960/1280" Click="Btn_SwitchResolution_Click" />
            <Button Content="150/300/500/1000/Off" Click="Btn_SwitchAnalyseTime_Click" />
            <TextBox Name="info" VerticalAlignment="Bottom" IsReadOnly="True" />
        </StackPanel>
        <Image Name="image1" MinWidth="640" MinHeight="480" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" />
    </StackPanel>

</Window>
